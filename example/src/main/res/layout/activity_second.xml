<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id = "@+id/my2layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.soundcloud.android.crop.example.SecondActivity"
android:background="@drawable/a5">

<ImageView
        android:id="@+id/result2_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/myicon" />

<LinearLayout

    android:id="@+id/TotalValue"
    android:layout_below="@+id/result2_image"
    android:layout_marginTop="75dp"
    android:layout_height="wrap_content"
    android:layout_width="250dp"

    android:layout_centerHorizontal="true">

    <TextView
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cell Number"/>

    <EditText
        android:id="@+id/totalCellValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center"
        android:minWidth="200dp"/>
</LinearLayout>

    <LinearLayout

        android:id="@+id/LiveCellValue"
        android:layout_below="@+id/result2_image"
        android:layout_marginTop="110dp"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Cell Number "/>

        <EditText
            android:id="@+id/liveCellValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:minWidth="200dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/deadCell"
        android:layout_below="@+id/result2_image"
        android:layout_marginTop="145dp"
        android:layout_height="wrap_content"
        android:layout_width="250dp"

        android:layout_centerHorizontal="true">

        <TextView
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Dead Cell Number"/>

        <EditText
            android:id="@+id/deadCellValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:minWidth="200dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/secondButton"
        android:layout_below="@id/deadCell"

        android:background="@drawable/bt_shape"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BACK"/>


</RelativeLayout>
